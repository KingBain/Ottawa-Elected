<h1>Editing page <a href="http://www.squarespace.com/display/ShowHelp?section=Textile">Syntax Refference</a></h1>

<% form_for(@page) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :head %><br />
    <%= f.text_area :head, :cols => '100' %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => '100' %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @page %> |
<%= link_to 'Back', pages_path %>
